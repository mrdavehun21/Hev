    <img id="image2" class="sin" src="../icons/sin2.png"></a>
</body>
</html>

<script>
  window.onload = function() {
    // Check if theme preference is stored
    const currentTheme = localStorage.getItem('theme');
    if (currentTheme) {
      document.body.classList.add(currentTheme);
    }

    // Check initial theme for image source change
    checkTheme();
  };

  function toggleTheme() {
    const body = document.body;
    body.classList.toggle("dark-mode");

    // Save theme preference to localStorage
    const currentTheme = body.classList.contains('dark-mode') ? 'dark-mode' : '';
    localStorage.setItem('theme', currentTheme);

    // Change image source based on theme
    checkTheme();
  }

  function checkTheme() {
    const isDarkMode = document.body.classList.contains('dark-mode');
    const image1 = document.getElementById('image1');
    const image2 = document.getElementById('image2');

    if (isDarkMode) {
      // Change image source for dark mode
      image1.src = '../icons/MXAEste.png';
    } else {
      // Reset image source for light mode
      image1.src = '../icons/MXA.png';
    }
  }
  document.addEventListener('contextmenu', function(event) {
    event.preventDefault();
  });
</script>

