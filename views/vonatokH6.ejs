    <script>
        function reloadPage() {
            location.reload();
        }
        var autoReloadInterval;

        function toggleAutoReload() {
            var checkbox = document.getElementById("autoReloadCheckbox");
            if (checkbox.checked) {
                autoReloadInterval = setInterval(reloadPage, 30000);
            } else {
                clearInterval(autoReloadInterval);
            }
        }

        toggleAutoReload(); // Call the function to start auto-reload when the page loads

        document.getElementById("autoReloadCheckbox").addEventListener("change", toggleAutoReload);
    </script>
