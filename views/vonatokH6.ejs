</head>
<body>
    <header>
        <nav class="navbar bg-dark border-bottom border-body fixed-top" data-bs-theme="dark">
            <div class="container-sm">
              <h1 class="navbar-brand H6">Motorkocsik</h1>
              <h3 class="navbar-brand H6">Összesen: <%# vehicles.length %> szerelvény</h3>
              <button class="navbar-toggler" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasNavbar" aria-controls="offcanvasNavbar" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
              </button>
              <div class="offcanvas offcanvas-end" tabindex="-1" id="offcanvasNavbar" aria-labelledby="offcanvasNavbarLabel">
                <div class="offcanvas-header">
                  <h5 class="offcanvas-title" id="offcanvasNavbarLabel"><%# dateForDesign %></h5>
                  <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
                </div>
                <div class="offcanvas-body">
                  <ul class="navbar-nav justify-content-end flex-grow-1 pe-3">
                    <li class="nav-item">
                      <h5><a class="nav-link menu-items" href="/home">Vissza a főoldalra</a></h5>
                    </li>
                    <%# Refresh On/Off %>
                    <li class="custom-checkbox">
                        <input type="checkbox" id="autoReloadCheckbox" class="styled-checkbox" checked>
                        <label for="autoReloadCheckbox" class="checkbox-label">Folyamatos frissítés engedélyezése</label>
                    </li>                   
                    <%# Select tripHeadsign %>
                    <!-- <li class="custom-form">
                        <form action="/home/vonatokH6" method="POST">
                            <label for="directionSelect">Végállomás:</label>
                            <select id="directionSelect" name="selectedDirection" class="custom-select">
                                <option value="">Összes szerelvény</option>
                                <option value="Ráckeve">Ráckeve</option>
                                <option value="Közvágóhíd">Közvágóhíd</option>
                            </select>
                            <button type="submit" class="custom-button">OK</button>
                        </form>                        
                    </li> -->
                  </ul>
                </div>
              </div>
            </div>
          </nav>
    </header>
    <main>
      <div class="container-lg">
        <%# const filteredVehicles = selectedDirection ? vehicles.filter(vehicle => vehicle.tripHeadsign === selectedDirection) : vehicles; %>

        <%# filteredVehicles.forEach(vehicle => { %>
            <div class="card mb-3">
                <div class="card-header">
                  <h5 class="card-title font">
                    <!-- <button type="button"><%# vehicle.licensePlate %></button> -->
                  </h5>
                </div>
                <div class="card-body">
                    <p class="card-text">
                        <b>
                            Jelenleg <span class="stopName"><%# vehicle.stopName %></span>
                            <%# if (vehicle.status === 'IN_TRANSIT_TO') { %>
                                megálló felé közlekedik
                            <%# } else { %>
                                megállóban áll
                            <%# } %>
                        </b>
                    </p>
                    <p class="card-text">
                        <%# if (vehicle.tripHeadsign == 'Szentendre') { %>
                            <img src="../../icons/celfilmek/#" alt="Ráckeve" class="celfilm">
                        <%# } else if (vehicle.tripHeadsign === 'Batthyány tér') { %>
                            <img src="../../icons/celfilmek/#" alt="Közvágóhíd" class="celfilm">
                        <%# } %>
                    </p>
                    
                    <!-- Collapsible section for Stops -->
                    <%# const vehicleStops = stopsByVehicle[vehicle.vehicleId] || []; %>
                    <%# let validPredictedArrivalTimeExists = vehicleStops.some(stop => stop.predictedArrivalTime !== "Invalid Date"); %>

                    <%# if (validPredictedArrivalTimeExists) { %>
                        <div class="accordion" id="accordionStops<%# vehicle.index %>">
                            <div class="accordion-item">
                                <h2 class="accordion-header" id="headingStops<%# vehicle.index %>">
                                    <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseStops<%# vehicle.index %>" aria-expanded="true" aria-controls="collapseStops<%# vehicle.index %>">
                                        Menetrend
                                    </button>
                                </h2>
                                <div id="collapseStops<%# vehicle.index %>" class="accordion-collapse collapse" aria-labelledby="headingStops<%# vehicle.index %>" data-bs-parent="#accordionStops<%# vehicle.index %>">
                                    <div class="accordion-body">
                                        <table class="table stop-table pt-5">
                                            <thead>
                                                <tr>
                                                    <th scope="col">Megálló</th>
                                                    <th scope="col">Érkezési idő</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <%# vehicleStops.forEach(stop => { %>
                                                    <tr>
                                                        <td class="stops-lineH6">
                                                            <%# colored circle %>
                                                            <span class="circle-iconH6"></span>
                                                            <%# StopName colored %>
                                                            <%# if (vehicle.stopSequence >= stop.stopSequence) { %>
                                                                <%# if (stop.predictedArrivalTime !== "Invalid Date") { %>
                                                                    <span class="leftstopsH6"><%# stop.stopId %></span>
                                                                    <td><span class="leftstopsH6"><%# stop.predictedArrivalTime %></span></td>
                                                                <%# } else { %>
                                                                    <span class="leftstopsH6"><%# stop.stopId %></span>
                                                                    <td><span class="leftstopsH6"><%# stop.predictedDepartureTime %></span></td>
                                                                <%# } %>
                                                            <%# StopName not colored %>
                                                            <%# } else { %>
                                                                <%# stop.stopId %>
                                                                <td><%# stop.predictedArrivalTime %></td>
                                                            <%# } %>
                                                        </td>
                                                    </tr>
                                                <%# }); %>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <%# } %>
                </div>
            </div>
        <%# }); %>
    </div>    
    </main>
    <footer class="d-flex bg-dark flex-wrap justify-content-center align-items-center px-5 py-3 border-top mb-0">
    <p class="col-12 col-md-4 mb-3 mb-md-0 text-center text-md-start text-light">© 2024 RapidTrack</p>
  
