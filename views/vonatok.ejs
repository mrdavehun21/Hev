<!DOCTYPE html>
<html lang="hu">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="../css/vonatok.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Racing+Sans+One&display=swap" rel="stylesheet">
    <title>Vonatok</title>
</head>
<body class="bg-secondary bg-gradient">
    <header>
        <nav class="navbar bg-dark border-bottom border-body fixed-top" data-bs-theme="dark">
            <div class="container-sm">
              <h1 class="navbar-brand">MXA Motorkocsik</h1>
              <button class="navbar-toggler" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasNavbar" aria-controls="offcanvasNavbar" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
              </button>
              <div class="offcanvas offcanvas-end" tabindex="-1" id="offcanvasNavbar" aria-labelledby="offcanvasNavbarLabel">
                <div class="offcanvas-header">
                  <h5 class="offcanvas-title" id="offcanvasNavbarLabel"><%= dateForDesign.replace('at', '') %></h5>
                  <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
                </div>
                <div class="offcanvas-body">
                  <ul class="navbar-nav justify-content-end flex-grow-1 pe-3">
                    <li class="nav-item">
                      <a class="nav-link active" aria-current="page" href="#">Home</a>
                      
                    </li>
                    <li class="nav-item">
                      <a class="nav-link" href="#">Link</a>
                    </li>
                    <li class="nav-item dropdown">
                      <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                        Dropdown
                      </a>
                      <ul class="dropdown-menu">
                        <li><a class="dropdown-item" href="#">Action</a></li>
                        <li><a class="dropdown-item" href="#">Another action</a></li>
                        <li>
                          <hr class="dropdown-divider">
                        </li>
                        <li><a class="dropdown-item" href="#">Something else here</a></li>
                      </ul>
                    </li>
                  </ul>
                  <form class="d-flex mt-3" role="search">
                    <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
                    <button class="btn btn-outline-success" type="submit">Search</button>
                  </form>
                </div>
              </div>
            </div>
          </nav>
    </header>
    <main>
      <br><br>
      <div class="container-lg">
        <% vehicles.forEach(vehicle => { %>
            <div class="card mb-3">
                <div class="card-header">
                    <h5 class="card-title font"><%= vehicle.licensePlate %></h5>
                </div>
                <div class="card-body">
                    <p class="card-text">Jelenleg <%= vehicle.stopName %>
                      <% if (vehicle.status === 'IN_TRANSIT_TO') { %>
                          megálló felé közlekedik
                      <% } else { %>
                          megállóban áll
                      <% } %>
                    </p>
                    <p class="card-text">
                      <% if (vehicle.tripHeadsign == 'Szentendre') { %>
                        <img  src="../icons/celfilmek/Endre.png" alt="Szentendre" class="celfilm">
                      <% } %>
                      <% if (vehicle.tripHeadsign === 'Békásmegyer') { %>
                        <img  src="../icons/celfilmek/Bekas.png" alt="Békásmegyer" class="celfilm">
                      <% } %>
                      <% if (vehicle.tripHeadsign === 'Batthyány tér') { %>
                        <img  src="../icons/celfilmek/Bter_old.png" alt="Batthyány tér" class="celfilm">
                      <% } %>
                    </p>
                    
                    <!-- Collapsible section for Stops -->
                    <div class="accordion" id="accordionStops<%= vehicle.index %>">
                        <div class="accordion-item">
                            <h2 class="accordion-header" id="headingStops<%= vehicle.index %>">
                                <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseStops<%= vehicle.index %>" aria-expanded="true" aria-controls="collapseStops<%= vehicle.index %>">
                                    Stops
                                </button>
                            </h2>
                            <div id="collapseStops<%= vehicle.index %>" class="accordion-collapse collapse" aria-labelledby="headingStops<%= vehicle.index %>" data-bs-parent="#accordionStops<%= vehicle.index %>">
                                <div class="accordion-body">
                                    <table class="table stop-table pt-5">
                                        <thead>
                                            <tr>
                                                <th scope="col">Stop ID</th>
                                                <th scope="col">Arrival Time</th>
                                                <th scope="col">Predicted Arrival Time</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% const vehicleStops = stopsByVehicle[vehicle.vehicleId] || []; %>
                                            <% vehicleStops.forEach(stop => { %>
                                                <tr>
                                                    <td><%= stop.stopId %></td>
                                                    <td><%= stop.arrivalTime %></td>
                                                    <td><%= stop.predictedArrivalTime %></td>
                                                </tr>
                                            <% }); %>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- End Collapsible section for Stops -->
                </div>
            </div>
        <% }); %>
    </div>    
    </main>
</body>
<script>
    // Refresh the page after a certain delay
    setTimeout(function() {
        location.reload();
    }, 30000);
    document.addEventListener('contextmenu', function(event) {
            event.preventDefault();
    });
</script>
</html>