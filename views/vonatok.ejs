<!DOCTYPE html>
<html lang="hu">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="../css/vonatok.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Racing+Sans+One&display=swap" rel="stylesheet">
    <title>Vonatok</title>
    <link rel="icon" type="image/png" href="../icons/favicon.png">
    <meta name="description" content="MXA-kocsik pályaszáma a H5-ös HÉV vonalán">
</head>
<body>
    <header>
        <nav class="navbar bg-dark border-bottom border-body fixed-top" data-bs-theme="dark">
            <div class="container-sm">
              <h1 class="navbar-brand">MXA Motorkocsik</h1>
              <button class="navbar-toggler" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasNavbar" aria-controls="offcanvasNavbar" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
              </button>
              <div class="offcanvas offcanvas-end" tabindex="-1" id="offcanvasNavbar" aria-labelledby="offcanvasNavbarLabel">
                <div class="offcanvas-header">
                  <h5 class="offcanvas-title" id="offcanvasNavbarLabel"><%= dateForDesign.replace('at', '') %></h5>
                  <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
                </div>
                <div class="offcanvas-body">
                  <ul class="navbar-nav justify-content-end flex-grow-1 pe-3">
                    <li class="nav-item">
                      <a class="nav-link active" aria-current="page" href="/home">Home</a>
                      
                    </li>
                  </ul>
                </div>
              </div>
            </div>
          </nav>
    </header>
    <main>
      <div class="container-lg">
        <% vehicles.forEach(vehicle => { %>
            <div class="card mb-3">
                <div class="card-header">
                  <h5 class="card-title font">

                    <button type="button" onclick="toggleInfo('<%= vehicle.licensePlate %>')"><%= vehicle.licensePlate %></button>

                    <%# ExtraInfo section to be toggled %>
                    <div id="extraInfo<%= vehicle.licensePlate %>" style="display: none;">
                        <%# Splitting into 2 %>
                        <% const [part1, part2] = vehicle.licensePlate.split("-"); %>
                        <% const items = licensePlates.filter(item => item.palyaszam.includes(part1) || item.palyaszam.includes(part2)); %>
                        
                        <% items.forEach(item => { %>
                            <%= `${item.palyaszam[0]}-${item.palyaszam[1]}` %>
                        <% }); %>
                        
                        <% if(!vehicle.licensePlate.includes('-')) { %>
                            || 3-as kocsi
                        <% } %>
                    </div>
                    
                  </h5>
                </div>
                <div class="card-body">
                    <p class="card-text">
                        <b>
                            Jelenleg <span class="stopName"><%= vehicle.stopName %></span>
                            <% if (vehicle.status === 'IN_TRANSIT_TO') { %>
                                megálló felé közlekedik
                            <% } else { %>
                                megállóban áll
                            <% } %>
                        </b>
                    </p>
                    <p class="card-text">
                      <% if (vehicle.tripHeadsign == 'Szentendre') { %>
                        <img  src="../icons/celfilmek/Endre.png" alt="Szentendre" class="celfilm">
                      <% } %>
                      <% if (vehicle.tripHeadsign === 'Békásmegyer') { %>
                        <img  src="../icons/celfilmek/Bekas.png" alt="Békásmegyer" class="celfilm">
                      <% } %>
                      <% if (vehicle.tripHeadsign === 'Batthyány tér') { %>
                        <img  src="../icons/celfilmek/Bter_old.png" alt="Batthyány tér" class="celfilm">
                      <% } %>
                    </p>
                    
                    <!-- Collapsible section for Stops -->
                    <% const vehicleStops = stopsByVehicle[vehicle.vehicleId] || []; %>
                    <% let validPredictedArrivalTimeExists = vehicleStops.some(stop => stop.predictedArrivalTime !== "Invalid Date"); %>

                    <% if (validPredictedArrivalTimeExists) { %>
                        <div class="accordion" id="accordionStops<%= vehicle.index %>">
                            <div class="accordion-item">
                                <h2 class="accordion-header" id="headingStops<%= vehicle.index %>">
                                    <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseStops<%= vehicle.index %>" aria-expanded="true" aria-controls="collapseStops<%= vehicle.index %>">
                                        Menetrend
                                    </button>
                                </h2>
                                <div id="collapseStops<%= vehicle.index %>" class="accordion-collapse collapse" aria-labelledby="headingStops<%= vehicle.index %>" data-bs-parent="#accordionStops<%= vehicle.index %>">
                                    <div class="accordion-body">
                                        <table class="table stop-table pt-5">
                                            <thead>
                                                <tr>
                                                    <th scope="col">Megálló</th>
                                                    <th scope="col">Érkezési idő</th>
                                                    <!-- <th scope="col">Predicted Departure Time</th> -->
                                                </tr>
                                            </thead>
                                            <!-- végállomásnak nincs érkezési ideje csak indulási -->
                                            <tbody>
                                                <% vehicleStops.forEach(stop => { %>
                                                        <tr>
                                                            <td><%= stop.stopId %></td>
                                                            <% if (stop.predictedArrivalTime !== "Invalid Date") { %>
                                                                <td><%= stop.predictedArrivalTime %></td>
                                                            <% } else { %>
                                                                <td><%= stop.predictedDepartureTime %></td>
                                                            <% } %>
                                                        </tr>
                                                <% }); %>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <% } %>
                </div>
            </div>
        <% }); %>
    </div>    
    </main>
</body>
<script>
    //extraInfo
    function toggleInfo(licensePlate) {
        var codeSection = document.getElementById("extraInfo" + licensePlate);
        if (codeSection.style.display === "none") {
            codeSection.style.display = "block";
        } else {
            codeSection.style.display = "none";
        }
    }
    function reloadPage() {
        location.reload();
    }
    setInterval(reloadPage, 30000);
</script>

</html>