<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  <link rel="stylesheet" href="../css/arrivals.css">
  <title>RapidTrack</title>
  <link rel="icon" type="image/png" href="../icons/favicon.png">
  <meta name="description" content="Budapest egyik megállójának adatai.">
</head>
<body>
    <header>
        <nav class="navbar bg-dark border-bottom border-body fixed-top" data-bs-theme="dark">
            <div class="container-sm">
              <h1 class="navbar-brand">Megálló</h1>
              <button class="navbar-toggler" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasNavbar" aria-controls="offcanvasNavbar" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
              </button>
              <div class="offcanvas offcanvas-end" tabindex="-1" id="offcanvasNavbar" aria-labelledby="offcanvasNavbarLabel">
                <div class="offcanvas-header">
                  <h5 class="offcanvas-title" id="offcanvasNavbarLabel">Menü</h5>
                  <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
                </div>
                <div class="offcanvas-body">
                  <ul class="navbar-nav justify-content-end flex-grow-1 pe-3">
                      <a href="/home">Vissza a főoldalra</a>
                    </li>
                  </ul>
                </div>
              </div>
            </div>
          </nav>
    </header>
    <main>
      <table class="table table-dark">
        <thead>
          <tr>
            <th scope="col">Járat</th>
            <th scope="col">Irány</th>
            <th scope="col">Indulás</th>
          </tr>
        </thead>
        <tbody>
          <% 
            // Separate arrivals into two groups: departing now and others
            const departingNow = [];
            const otherArrivals = [];
            arrivals.forEach(arrival => {
              if (Math.abs(arrival.minutesUntilDeparture) === 0) {
                departingNow.push(arrival);
              } else {
                otherArrivals.push(arrival);
              }
            });
      
            // Sort the departing now arrivals to be displayed first
            departingNow.sort((a, b) => {
              if (a.minutesUntilDeparture === b.minutesUntilDeparture) {
                return 0;
              }
              return a.minutesUntilDeparture < b.minutesUntilDeparture ? -1 : 1;
            });
      
            // Limit the number of displayed arrivals to 10
            const displayedArrivals = departingNow.slice(0, 10).concat(otherArrivals.slice(0, 10 - departingNow.length));
      
            // Render the table rows for the displayed arrivals
            displayedArrivals.forEach(arrival => { 
          %>
          <tr>
            
            <td><%= arrival.routeNumber %></td>
            
            <td><%= arrival.headsign %></td>
            
            <td>
              <% if (Math.abs(arrival.minutesUntilDeparture) === 0) { %>
                <p class="flashing-text"> </p>
              <% } else { %>
                <p><%= Math.abs(arrival.minutesUntilDeparture) %>' <i class="fas fa-clock"></i></p>
              <% } %>
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>      
        
    </main>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>